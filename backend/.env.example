# =====================================================================
# CONFIGURACIÓN DE ENTORNO - BACKEND SAAS
# =====================================================================

# Configuración del servidor
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de datos principal SaaS
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres_db
DB_USER=saas_app
DB_PASSWORD=your_secure_password

# Base de datos de n8n (para sincronización)
N8N_DB_HOST=localhost
N8N_DB_PORT=5432
N8N_DB_NAME=n8n_db
N8N_DB_USER=n8n_app
N8N_DB_PASSWORD=your_secure_password

# Base de datos de Evolution API (WhatsApp)
EVOLUTION_DB_HOST=localhost
EVOLUTION_DB_PORT=5432
EVOLUTION_DB_NAME=evolution_db
EVOLUTION_DB_USER=evolution_app
EVOLUTION_DB_PASSWORD=your_secure_password

# Base de datos de Chat Memories (IA)
CHAT_DB_HOST=localhost
CHAT_DB_PORT=5432
CHAT_DB_NAME=chat_memories_db
CHAT_DB_USER=chat_app
CHAT_DB_PASSWORD=your_secure_password

# Autenticación JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis (cache y colas)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Integración n8n
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks/n8n

# Integración Evolution API (WhatsApp)
EVOLUTION_API_URL=http://localhost:8000
EVOLUTION_API_KEY=your_evolution_api_key

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# URLs externas
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Configuración de email (futuro)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourdomain.com

# Configuración de Google Calendar (futuro)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Webhooks externos
STRIPE_WEBHOOK_SECRET=
WEBHOOK_SECRET=your_webhook_secret