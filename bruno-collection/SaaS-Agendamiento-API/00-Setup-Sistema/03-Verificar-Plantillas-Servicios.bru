meta {
  name: 03 - Verificar Plantillas Servicios
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/api/v1/organizaciones
  body: none
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

headers {
  Content-Type: application/json
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Response should contain success true", function() {
    const body = res.getBody();
    expect(body).to.have.property('success', true);
  });

  test("Should have plantillas servicios disponibles", function() {
    const body = res.getBody();
    expect(body.data).to.have.property('data');
    expect(body.data.data).to.be.an('array');
    expect(body.data.data.length).to.be.greaterThan(0);
  });

  test("Verificar organizaciones por industria", function() {
    const body = res.getBody();
    const organizaciones = body.data.data;

    // Verificar que existen organizaciones para diferentes industrias
    const industriasEsperadas = ['barberia', 'spa', 'consultorio_medico'];

    console.log(`âœ… Total organizaciones disponibles: ${organizaciones.length}`);

    // Contar por industria
    const conteoIndustrias = {};
    organizaciones.forEach(org => {
      const industria = org.tipo_industria;
      conteoIndustrias[industria] = (conteoIndustrias[industria] || 0) + 1;
    });

    console.log("ðŸ“Š Organizaciones por industria:");
    Object.entries(conteoIndustrias).forEach(([industria, count]) => {
      console.log(`  ${industria}: ${count} organizaciones`);
    });
  });

  test("Verificar estructura de organizaciones", function() {
    const body = res.getBody();
    const organizaciones = body.data.data;

    if (organizaciones.length > 0) {
      const organizacion = organizaciones[0];
      expect(organizacion).to.have.property('id');
      expect(organizacion).to.have.property('nombre_comercial');
      expect(organizacion).to.have.property('tipo_industria');
      expect(organizacion).to.have.property('plan_actual');
      expect(organizacion).to.have.property('activo');
    }
  });

